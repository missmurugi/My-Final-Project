<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:background="@drawable/interior"
    tools:context=".Residential">

    <EditText
        android:id="@+id/mResidentLocation"
        android:hint="Search by town, city or postcode"
        android:padding="16dp"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:drawableRight="@drawable/ic_search"
        android:textColorHint="#123"
        android:background="@color/login_form_details_medium"
        android:drawableLeft="@drawable/ic_location_on_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <AutoCompleteTextView
        android:id="@+id/actv1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:textColorHint="#123"
        android:hint="Distance"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/ImgResident"
        android:src="@drawable/baseline_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_alignRight="@id/actv1"
        android:layout_alignBottom="@id/actv1"
        android:layout_alignTop="@id/actv1"/>


    <AutoCompleteTextView
        android:id="@+id/actv2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColorHint="#123"
        android:layout_marginTop="140dp"
        android:hint="Property Type"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/ImgResident1"
        android:src="@drawable/baseline_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_alignRight="@id/actv2"
        android:layout_alignBottom="@id/actv2"
        android:layout_alignTop="@id/actv2"/>


    <ImageView
        android:id="@+id/ImgResident2"
        android:src="@drawable/baseline_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_alignRight="@id/actv3"
        android:layout_alignBottom="@id/actv3"
        android:layout_alignTop="@id/actv3"/>

    <AutoCompleteTextView
        android:id="@+id/actv3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:textColorHint="#123"
        android:hint="Bedrooms"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>